<!-- Splash Screen -->
<!-- scroll view to be able to display on both landscape and portrait-->

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splashback">

    <!-- constraint view to hold all views -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- App name banner -->

        <TextView
            android:id="@+id/title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginTop="116dp"
            android:layout_marginEnd="70dp"
            android:fontFamily="@font/alfa_slab_one"
            android:rotationX="0"
            android:rotationY="0"
            android:text="@string/quiz_time"
            android:textColor="#FFFFFF"
            android:textSize="70sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <!-- the app logo -->
        <ImageView
            android:id="@+id/quizpicture"
            android:layout_width="395dp"
            android:layout_height="450dp"
            android:layout_marginTop="150dp"
            android:contentDescription="@string/logo2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title1"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/logo2" />


    </androidx.constraintlayout.widget.ConstraintLayout>





</ScrollView>